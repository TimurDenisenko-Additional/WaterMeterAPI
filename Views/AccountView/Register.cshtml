@model WaterMeterAPI.Models.AccountModel

@{
    ViewData["Title"] = "Loo uus konto";
    Layout = "Layout.cshtml";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #F5F5F5;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 100%;
            max-width: 600px; 
            padding: 20px;
        }

        .page-wrapper {
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            height: 900px;
        }

        h1 {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            border-radius: 15px;
            padding: 40px;
            background-color: #F5F5F5;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        .form-input {
            width: 100%;
            padding: 15px;
            font-size: 18px;
            border-radius: 10px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
            transition: all 0.3s ease-in-out;
        }

            .form-input:focus {
                outline: none;
                border-color: #134B70;
                background-color: #fff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            }

        .btn-create {
            width: 100%;
            padding: 15px;
            font-size: 18px;
            background-color: #535C91;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-create:hover {
                background-color: #1B1A55;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <p class="form-label">Eesnimi</p>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-input" } })
                    </div>

                    <div class="form-group">
                        <p class="form-label">Perenimi</p>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-input" } })
                    </div>

                    <div class="form-group">
                        <p class="form-label">Sugu</p>
                        @Html.DropDownListFor(model => model.Gender, new SelectList(new List<string> { "Mees", "Naine", "Muu" }), new { @class = "form-input" })
                    </div>

                    <div class="form-group">
                        <p class="form-label">Email</p>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-input" } })
                    </div>

                    <div class="form-group">
                        <p class="form-label">Parool</p>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-input" } })
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Loo konto" class="btn-create" />
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
