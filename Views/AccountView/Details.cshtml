@model WaterMeterAPI.Models.AccountModel

@{
    ViewData["Title"] = $"Üksikasjad - {Model.FirstName} {Model.LastName}";
    Layout = "Layout.cshtml";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #F5F5F5;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 100%;
            max-width: 600px;
            padding: 20px;
        }

        .page-wrapper {
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        h1 {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            border-radius: 15px;
            padding: 40px;
            background-color: #F5F5F5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-body">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Eesnimi:</strong> @Model.FirstName</p>
                <p><strong>Perenimi:</strong> @Model.LastName</p>
                <p><strong>Sugu:</strong> @Model.Gender</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Roll:</strong> @Model.Role</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
