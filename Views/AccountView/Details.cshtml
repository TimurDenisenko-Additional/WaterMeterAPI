@model WaterMeterAPI.Models.AccountModel

@{
    ViewData["Title"] = $"Üksikasjad - {Model.FirstName} {Model.LastName}";
    Layout = "Layout.cshtml";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            font-size: 36px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 30px;
        }

        .card {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        .card-body {
            font-size: 16px;
        }

        .btn-back {
            background-color: #28a745 !important;
            color: white !important;
            padding: 8px 15px !important;
            border-radius: 5px !important;
            text-decoration: none !important;
            transition: background-color 0.3s ease !important;
        }

        .btn-back:hover {
            background-color: #218838 !important;
        }

        .btn-delete {
            background-color: #dc3545 !important;
            color: white !important;
            padding: 8px 15px !important;
            border-radius: 5px !important;
            text-decoration: none !important;
            transition: background-color 0.3s ease !important;
        }

        .btn-delete:hover {
            background-color: #c82333 !important;
        }

        .btn {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-header">
                Kontode üksikasjad
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Eesnimi:</strong> @Model.FirstName</p>
                <p><strong>Perenimi:</strong> @Model.LastName</p>
                <p><strong>Sugu:</strong> @Model.Gender</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Roll:</strong> @Model.Role</p>
            </div>
            <div class="card-footer text-center">
                @Html.ActionLink("Tagasi", "Index", routeValues: null, new { @class = "btn-back" })
                @Html.ActionLink("Kustuta", "Delete", new { id = Model.Id }, new { @class = "btn-delete" })
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
