@{
    WaterMeterAPI.Models.AccountModel CurrentUser = null;
    if (ViewData.Model != null){
        try
        {
            CurrentUser = ViewData.Model[0];
        }
        catch
        {
            CurrentUser = ViewData.Model;
        }
    }
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F5F5F5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .page-wrapper {
            margin-top: 60px;
            padding: 2rem;
            background-color: #F5F5F5;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
        }

        .nav-bar {
            background-color: #070F2B;
            color: white;
            border-radius: 10px;
            padding: 15px 30px;
            margin-top: 10px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 999;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

            .nav-bar .nav-left {
                display: inline-block;
            }

            .nav-bar .nav-right {
                float: right;
                display: inline-block;
            }

            .nav-bar a {
                color: white;
                text-decoration: none;
                margin-right: 20px;
                font-size: 16px;
            }

                .nav-bar a:hover {
                    text-decoration: underline;
                }

            .nav-bar .nav-left a {
                font-weight: bold;
            }

            .nav-bar .nav-right a {
                font-weight: normal;
            }

        .page-wrapper {
            margin-top: 100px;
        }
    </style>
</head>
<body>
    <div class="nav-bar">
        <div class="nav-left">
            <a href="#">Kodu</a>
            @if (CurrentUser != null)
            {
                @if (CurrentUser.Role == "Admin")
                {
                    <a href="@Url.Action("Index", "AccountView")">Kasutajad</a>
                }
            }
        </div>

        <div class="nav-right">
            @if (CurrentUser == null)
            {
                <a href="@Url.Action("Login", "AccountView")">Logi sisse</a>
                <a href="@Url.Action("Register", "AccountView")">Registreerimine</a>
            }
            else
            {
                @Html.ActionLink(
                         $"Tere, {CurrentUser.FirstName} {CurrentUser.LastName}!",
                         "Details",
                         "AccountView",
                         new { id = CurrentUser.Id },
                         new { @class = "your-class-name" }
                         )
                <a href="@Url.Action("Logout", "AccountView")">Logi välja</a>
            }
        </div>
    </div>

    <div class="page-wrapper">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
