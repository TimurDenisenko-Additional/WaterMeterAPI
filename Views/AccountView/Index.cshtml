@model IEnumerable<WaterMeterAPI.Models.AccountModel>

@{
    ViewData["Title"] = "Kontode nimekiri";
    Layout = "Layout.cshtml";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #333;
            font-size: 36px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 30px;
        }

        .table {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                text-align: center;
                padding: 12px 15px;
                font-size: 16px;
                vertical-align: middle;
                border: 1px solid #ddd;
                transition: background-color 0.3s ease, transform 0.2s ease, border-color 0.2s ease;
            }

            .table thead {
                background-color: #007bff;
                color: #fff;
                font-weight: bold;
            }

            .table tbody tr {
                background-color: #fff;
            }

                .table tbody tr:hover {
                    background-color: #d3d3d3;
                }

        .btn-details, .btn-delete, .btn-create {
            color: #fff;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-details {
            background-color: #007bff;
            border: none;
        }

            .btn-details:hover {
                color: #fff;
                background-color: #0056b3;
                transform: scale(1.05);
            }

        .btn-delete {
            background-color: #dc3545;
            border: none;
        }

            .btn-delete:hover {
                color: #fff;
                background-color: #c82333;
                transform: scale(1.05);
            }

        .btn-create {
            background-color: #28a745;
            border: none;
        }

            .btn-create:hover {
                color: #fff;
                background-color: #218838;
                transform: scale(1.05);
            }

        .btn {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        @Html.ActionLink("Loo uus konto", "Create", routeValues: null, new { @class = "btn-create btn btn-sm mb-3" })

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Eesnimi</th>
                    <th>Perenimi</th>
                    <th>Sugu</th>
                    <th>Email</th>
                    <th>Roll</th>
                    <th>Tegevused</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.Id</td>
                        <td>@account.FirstName</td>
                        <td>@account.LastName</td>
                        <td>@account.Gender</td>
                        <td>@account.Email</td>
                        <td>@account.Role</td>
                        <td>
                            @Html.ActionLink("Üksikasjad", "Details", new { id = account.Id }, new { @class = "btn-details btn btn-sm" })
                            @Html.ActionLink("Kustuta", "Delete", new { id = account.Id }, new { @class = "btn-delete btn btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
