@model string
@{
    ViewData["Title"] = "Error Page";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #e6e6e6;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #333;
        }

        .error-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            padding: 30px;
            text-align: center;
            width: 100%;
        }

            .error-container h1 {
                font-size: 80px;
                font-weight: 700;
                color: #dc3545;
                margin-bottom: 20px;
            }

            .error-container h2 {
                font-size: 36px;
                font-weight: 500;
                margin-bottom: 20px;
                color: #333;
            }

            .error-container p {
                font-size: 18px;
                line-height: 1.6;
                margin-bottom: 30px;
                color: #666;
            }

            .error-container .btn-home {
                background-color: #007bff;
                color: white;
                padding: 12px 25px;
                border-radius: 30px;
                text-decoration: none;
                font-size: 18px;
                font-weight: 500;
                text-transform: uppercase;
                letter-spacing: 1px;
                transition: all 0.3s ease;
            }

                .error-container .btn-home:hover {
                    background-color: #0056b3;
                    transform: translateY(-3px);
                }

                .error-container .btn-home:focus {
                    outline: none;
                }

                .error-container .btn-home:active {
                    transform: translateY(0);
                }

            .error-container .error-code {
                font-size: 50px;
                font-weight: 700;
                color: #dc3545;
                margin: 20px 0;
            }

            .error-container .error-message {
                font-size: 20px;
                color: #777;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>Oops!</h1>
        <h2>Midagi läks valesti</h2>
        <div class="error-code">400</div>
        <p class="error-message">@Model</p>
        <a href="@Url.Action("Index", "Home")" class="btn-home">Tagasi avalehele</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
